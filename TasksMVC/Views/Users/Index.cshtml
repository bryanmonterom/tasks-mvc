@model UserListViewModel

@{
    ViewData["Title"] = "Users";
    Layout = "../Shared/_Layout";
}
<h1>Users</h1>
@if (Model.Message is not null)
{
    <div class="alert alert-success" role="alert">
        @Model.Message
    </div>
}

@if (Model.UserList is not null)
{
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Actions</td>
                    <td>Email</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UserList)
                {
                    <tr>
                        <td>
                            <button asp-action="MakeAdmin"
                            asp-route-email="@user.Email" class="btn btn-primary me-2">
                                Convert to Admin
                            </button>
                                  <button asp-action="RemoveAdmin"
                            asp-route-email="@user.Email" class="btn btn-secondary me-2">
                                Remove from Admin
                            </button>
                        </td>
                        <td>
                            @user.Email
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </form>
}